{


    "name": "Calendar",
    "version": "0.1",
    "description": "Makes a calendar for MS Teams Educations accounts with no access to an assignment calendar",

    "permissions": [
        "storage",
        "activeTab"
    ],

    "content_scripts": [
        {
            "matches": [
                "https://teams.microsoft.com/*"
            ],
            "js": [
                "scripts/calendar.js",
                "scripts/dateConsts.js",
                "scripts/helper.js",
                "scripts/messages/messages.js"
            ]
        },
        {
            "matches": [
                "https://assignments.onenote.com/*"
            ],
            "js": [
                "scripts/dateConsts.js", "scripts/assignments/assignmentReader_cs.js"
            ],
            "all_frames": true
        }
    ],

    "background": {
        "scripts": [
            "scripts/messages/messages.js",

            "scripts/assignments/assignmentReader_bg.js",
            
            "scripts/messages/messageHandler.js"
        ]
    },

    "browser_action": {
        "default_icon": "icons/icon.png",
        "default_title": "MS Teams Homework Calendar",
        "default_popup": "popup/popup.html"
    },

    "icons": {
        "48": "icons/icon.png"
    },
    
    "manifest_version": 2

}